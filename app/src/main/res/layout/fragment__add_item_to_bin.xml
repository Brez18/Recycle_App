<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Fragment_AddItemToBin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dim_black">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
            android:id="@+id/item_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="15dp"
                android:layout_margin="3dp"
                app:cardElevation="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/item_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@color/white"
                        android:layout_gravity="center"
                        />

                    <ImageView
                        android:id="@+id/item_imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        />

                </FrameLayout>
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/item_image"
            android:background="@drawable/item_add_background"
            android:clickable="true"
            android:padding="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/dragHolder"
                android:layout_width="80dp"
                android:layout_height="6dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/light_grey2"
                />

            <TextView
                android:id="@+id/txt_itemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dragHolder"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:maxLines="2"
                android:text="Item Name"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/txtDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Information :"
                android:textColor="@color/grey"
                android:layout_below="@id/txt_itemName"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/txtDetails"
                android:layout_below="@id/txtDetails"
                android:layout_marginTop="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_toStartOf="@id/card_wt"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:paddingStart="15dp"
                        android:background="@drawable/ai_background_card">

                        <ImageView
                            android:id="@+id/category_image_item"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_ai_metal"
                            />

                        <TextView
                            android:id="@+id/txt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/category_image_item"
                            android:layout_alignStart="@id/category_image_item"
                            android:layout_marginTop="5dp"
                            android:text="Category"
                            android:textColor="@color/black"
                            android:textSize="11sp"/>

                        <TextView
                            android:id="@+id/txtCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt1"
                            android:layout_alignStart="@id/category_image_item"
                            android:text="Metal"
                            android:textColor="@color/black"
                            android:textSize="11sp"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_wt"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:layout_alignBottom="@id/card_category"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_centerInParent="true"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:paddingStart="15dp"
                        android:background="@drawable/ai_background_card">

                        <ImageView
                            android:id="@+id/qty_image"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_qty"
                            />

                        <TextView
                            android:id="@+id/txt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/qty_image"
                            android:layout_alignStart="@id/qty_image"
                            android:layout_marginTop="5dp"
                            android:text="Quantity"
                            android:textColor="@color/black"
                            android:textSize="11sp"/>

                        <TextView
                            android:id="@+id/txtQty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt2"
                            android:layout_alignStart="@id/txt2"
                            android:text="1 unit"
                            android:textColor="@color/black"
                            android:textSize="11sp"/>

                </RelativeLayout>

        </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_qty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/card_wt"
                    android:layout_alignBottom="@id/card_category"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    >

                    <RelativeLayout
                        android:id="@+id/Wt_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="9dp"
                        android:paddingStart="15dp"
                        android:background="@drawable/ai_background_card">

                        <ImageView
                            android:id="@+id/wt_image"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_weight" />

                        <TextView
                            android:id="@+id/txt3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/wt_image"
                            android:layout_alignStart="@id/wt_image"
                            android:layout_marginTop="1dp"
                            android:text="Weight"
                            android:textColor="@color/black"
                            android:textSize="11sp"/>

                        <EditText
                            android:id="@+id/Wt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt3"
                            android:layout_alignStart="@id/txt3"
                            android:layout_alignParentBottom="true"
                            android:inputType="numberDecimal"
                            android:hint="-"
                            android:padding="0dp"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:textColorHint="@color/black"
                            android:textAlignment="center"/>

                        <TextView
                            android:id="@+id/txt_Kg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt3"
                            android:layout_toEndOf="@+id/Wt"
                            android:text="kg"
                            android:textColor="@color/black"
                            android:textSize="11sp"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <Button
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add item to My Bin"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
