<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#425C5A"
    tools:context=".Fragments.Fragment_credentials">

    <RelativeLayout
        android:id="@+id/container_create_uname"
        android:layout_width="270dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/ic_user"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:padding="12dp"
            android:src="@drawable/ca_ic_username" />

        <EditText
            android:id="@+id/editText_uname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/ic_user"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@null"
            android:hint="Username"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#FFCEA2"
            android:textColorHint="#A2A2A2"
            android:textCursorDrawable="@drawable/login_edit_txt_cursor"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/ic_user"
            android:background="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ic_error1"
        android:layout_alignStart="@id/ic_error1"
        android:layout_alignEnd="@id/ic_error1"
        android:layout_alignBottom="@id/ic_error1">

        <View
            android:id="@+id/background_error1"
            android:layout_width="2dp"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:visibility="gone"
            />

    </RelativeLayout>


    <ImageView
        android:id="@+id/ic_error1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@id/container_create_uname"
        android:layout_alignEnd="@id/container_create_uname"
        android:visibility="gone"
        android:src="@drawable/ca_ic_error_foreground"/>



    <RelativeLayout
        android:id="@+id/container_create_email"
        android:layout_width="270dp"
        android:layout_height="42dp"
        android:layout_below="@id/container_create_uname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/ic_mail"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:src="@drawable/login_ic_mail_foreground" />

        <EditText
            android:id="@+id/editText_mail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/ic_mail"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@null"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#FFCEA2"
            android:textColorHint="#A2A2A2"
            android:textCursorDrawable="@drawable/login_edit_txt_cursor"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/ic_mail"
            android:background="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ic_error2"
        android:layout_alignStart="@id/ic_error2"
        android:layout_alignEnd="@id/ic_error2"
        android:layout_alignBottom="@id/ic_error2">

        <View
            android:id="@+id/background_error2"
            android:layout_width="2dp"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:visibility="gone"
            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/ic_error2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@id/container_create_email"
        android:layout_alignEnd="@id/container_create_email"
        android:visibility="gone"
        android:src="@drawable/ca_ic_error_foreground"/>

    <RelativeLayout
        android:id="@+id/container_create_password"
        android:layout_width="270dp"
        android:layout_height="42dp"
        android:layout_below="@id/container_create_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">


        <ImageView
            android:id="@+id/ic_lock"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:padding="5dp"
            android:src="@drawable/login_ic_lock_foreground" />

        <EditText
            android:id="@+id/editText_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/ic_eye"
            android:layout_toEndOf="@id/ic_lock"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@null"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#FFCEA2"
            android:textColorHint="#A2A2A2"
            android:textCursorDrawable="@drawable/login_edit_txt_cursor"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/ic_eye"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/login_ic_close_eye_foreground" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/ic_lock"
            android:background="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ic_error3"
        android:layout_alignStart="@id/ic_error3"
        android:layout_alignEnd="@id/ic_error3"
        android:layout_alignBottom="@id/ic_error3">

        <View
            android:id="@+id/background_error3"
            android:layout_width="2dp"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:visibility="gone"
            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/ic_error3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@id/container_create_password"
        android:layout_alignEnd="@id/container_create_password"
        android:layout_marginEnd="30dp"
        android:visibility="gone"
        android:src="@drawable/ca_ic_error_foreground"/>


    <RelativeLayout
        android:id="@+id/container_create_contact"
        android:layout_width="270dp"
        android:layout_height="42dp"
        android:layout_below="@id/container_create_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/ic_phone"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:padding="12dp"
            android:src="@drawable/ca_ic_phone" />

        <EditText
            android:id="@+id/editText_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/ic_phone"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@null"
            android:hint="Contact Number"
            android:inputType="phone"
            android:textColor="#FFCEA2"
            android:textColorHint="#A2A2A2"
            android:textCursorDrawable="@drawable/login_edit_txt_cursor"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/ic_phone"
            android:background="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ic_error4"
        android:layout_alignStart="@id/ic_error4"
        android:layout_alignEnd="@id/ic_error4"
        android:layout_alignBottom="@id/ic_error4">

        <View
            android:id="@+id/background_error4"
            android:layout_width="2dp"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:visibility="gone"
            />

    </RelativeLayout>


    <ImageView
        android:id="@+id/ic_error4"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@id/container_create_contact"
        android:layout_alignEnd="@id/container_create_contact"
        android:visibility="gone"
        android:src="@drawable/ca_ic_error_foreground"/>

    <RelativeLayout
        android:id="@+id/container_create_address"
        android:layout_width="270dp"
        android:layout_height="42dp"
        android:layout_below="@id/container_create_contact"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/ic_location"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:src="@drawable/ic_location" />

        <EditText
            android:id="@+id/editText_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/ic_location"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@null"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:textColor="#FFCEA2"
            android:textColorHint="#A2A2A2"
            android:textCursorDrawable="@drawable/login_edit_txt_cursor"
            android:textSize="12sp"
            android:maxLines="1"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/ic_location"
            android:background="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ic_error5"
        android:layout_alignStart="@id/ic_error5"
        android:layout_alignEnd="@id/ic_error5"
        android:layout_alignBottom="@id/ic_error5">

        <View
            android:id="@+id/background_error5"
            android:layout_width="2dp"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:visibility="gone"
            />

    </RelativeLayout>


    <ImageView
        android:id="@+id/ic_error5"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@id/container_create_address"
        android:layout_alignEnd="@id/container_create_address"
        android:visibility="gone"
        android:src="@drawable/ca_ic_error_foreground"/>

    <RelativeLayout
        android:id="@+id/divider"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/container_create_address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/txt_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="or"
            android:textColor="#A2A2A2" />

        <View
            android:layout_width="135dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/txt_or"
            android:background="#A2A2A2" />

        <View
            android:layout_width="135dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/txt_or"
            android:background="#A2A2A2" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:layout_below="@id/divider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/insta"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_insta_foreground" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/insta"
            android:src="@mipmap/ic_google_foreground" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/insta"
            android:src="@mipmap/ic_twitter_foreground" />

    </RelativeLayout>

</RelativeLayout>